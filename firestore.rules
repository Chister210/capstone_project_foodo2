rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Donations: allow create if user is donor, read for all auth users, update/delete for donor or receiver
    match /donations/{donationId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.donorId == request.auth.uid;
      allow update: if request.auth != null && (
        // Donor can always update their own donations
        resource.data.donorId == request.auth.uid ||
        // Receiver can update if they are already the claimed receiver
        resource.data.claimedBy == request.auth.uid ||
        // Allow any authenticated user to claim donations (set claimedBy and status)
        (
          resource.data.claimedBy == null &&
          request.resource.data.claimedBy == request.auth.uid &&
          request.resource.data.status == 'claimed'
        )
      );
      allow delete: if request.auth != null && (
        resource.data.donorId == request.auth.uid ||
        resource.data.claimedBy == request.auth.uid
      );
    }
    
    // Notifications: users can only access their own notifications
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null; // Allow creation for notification service
    }

    // Chats: only participants (donor or receiver) can read/write
    match /chats/{chatId} {
      allow read, write: if request.auth != null && (
        resource.data.donorId == request.auth.uid ||
        resource.data.receiverId == request.auth.uid
      );
      
      // Messages subcollection: only chat participants can read/write
      match /messages/{messageId} {
        allow read, write: if request.auth != null && (
          get(/databases/$(database)/documents/chats/$(chatId)).data.donorId == request.auth.uid ||
          get(/databases/$(database)/documents/chats/$(chatId)).data.receiverId == request.auth.uid
        );
      }
    }

    // Real-time Location: users can read/write their own location
    match /locations/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Feedback: allow writing feedback only if donation is delivered and user is receiver
    match /donations/{donationId}/feedback/{feedbackId} {
      allow read: if request.auth != null && (
        // Donors can read feedback for their donations
        get(/databases/$(database)/documents/donations/$(donationId)).data.donorId == request.auth.uid ||
        // Receivers can read their own feedback
        resource.data.receiverId == request.auth.uid
      );
      allow write: if request.auth != null && (
        // Only receivers can write feedback
        request.resource.data.receiverId == request.auth.uid &&
        // Only if donation is delivered
        get(/databases/$(database)/documents/donations/$(donationId)).data.status == 'delivered'
      );
    }

    // Public feedback collection for statistics
    match /feedback/{feedbackId} {
      allow read: if request.auth != null && resource.data.isVisible == true;
      allow write: if request.auth != null && request.resource.data.receiverId == request.auth.uid;
    }
  }
}
